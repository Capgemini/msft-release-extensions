{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "cd39f607-4f0d-40d8-b180-1dffa1ac64b0",
    "name": "capgemini-uk-msft-release-extensions",
    "friendlyName": "Create Release Notes",
    "description": "Creates Release Notes in your Wiki with all task items since your last release.",
    "helpMarkDown": "",
    "category": "Deploy",
    "author": "capgemini-msft-uk",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0
    },
    "inputs": [
        {
            "name": "AdoAccountName",
            "type": "string",
            "label": "Organisation Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Azure Devops organisation name."
        },
        {
          "name": "AdoProjectName",
          "type": "string",
          "label": "Project Name",
          "defaultValue": "",
          "required": true,
          "helpMarkDown": "The project name."
        },      
        {
          "name": "AdoUser",
          "type": "string",
          "label": "User Name",
          "defaultValue": "",
          "required": true,
          "helpMarkDown": "The user used to create the release notes."
        },
        {
          "name": "AdoToken",
          "type": "string",
          "label": "Access Token",
          "defaultValue": "$(System.AccessToken)",
          "required": true,
          "helpMarkDown": "Remember to allow access to OAuth Token from the agent."
        },
        {
          "name": "ReleaseId",
          "type": "string",
          "label": "ReleaseId",
          "defaultValue": "$(Release.ReleaseId)",
          "required": true,
          "helpMarkDown": "Remember to allow access to OAuth Token from the agent."
        },
        {
          "name": "DefinitionId",
          "type": "string",
          "label": "DefinitionId",
          "defaultValue": "$(Release.DefinitionId)",
          "required": true,
          "helpMarkDown": "."
        },
        {
          "name": "DefinitionEnvironmentId",
          "type": "string",
          "label": "StageId",
          "defaultValue": "$(Release.DefinitionEnvironmentId)",
          "required": true,
          "helpMarkDown": "."
        },
        {
          "name": "WikiId",
          "type": "string",
          "label": "Wiki Path",
          "defaultValue": "ProjectName.wiki",
          "required": true,
          "helpMarkDown": "Path to the WIKI."
        },
        {
          "name": "WikiPagePath",
          "type": "string",
          "label": "Wiki Release Notes root Path",
          "defaultValue": "",
          "required": true,
          "helpMarkDown": "Path to the WIKI."
        },
        {
          "name": "StageName",
          "type": "string",
          "label": "Stage Name",
          "defaultValue": "$(Release.EnvironmentName)",
          "required": true,
          "helpMarkDown": "."
        }
    ],
    "instanceNameFormat": "Create Release Notes",
    "execution": {
      "PowerShell": {
        "target": "$(currentDirectory)\\CreateReleaseNotes.ps1",
        "argumentFormat": "",
        "workingDirectory": "$(currentDirectory)"
      }
    }
}