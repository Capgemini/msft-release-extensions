                    <RadzenPanelMenuItem Text="Packages" Icon="widgets" Path="/Libraries" />
                    <RadzenPanelMenuItem Text="Dashboards" Icon="dashboard" />
                    <RadzenPanelMenuItem Text="Admin" Icon="settings" />
