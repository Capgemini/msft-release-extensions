        <div class="top-row px-4 auth">
            <LoginDisplay />
        </div>

        <RadzenLayout>
            <RadzenSidebar>
                <RadzenPanelMenu>
                    <RadzenPanelMenuItem Text="Scaffolders" Icon="rocket_launch" Path="/Scaffolders" />
